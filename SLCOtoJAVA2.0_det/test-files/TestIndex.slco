model TestIndex {
    actions a

	classes
	P {
      variables Integer y Integer[2] x Integer i
	  state machines
	    SM1 {
		  initial SM1_0 states SM1_1
		  transitions
			from SM1_0 to SM1_1 {
              [y <= 10; y := y + 1]
			}
			from SM1_0 to SM1_1 {
              [y > 10; x[i] := 0; y := 0]
			}
			from SM1_1 to SM1_0 {
              x[i] := x[i] + 1
			}
			from SM1_1 to SM1_0 {
              x[i] := x[x[i + 1]] + 1
			}
	    }
	}
	Q {
      variables Integer[2] y Integer[2] x Integer[2] i
	  state machines
	    SM1 {
		  initial SM1_0
		  transitions
			from SM1_0 to SM1_0 {
              y[0] := y[x[0]]
			}
			from SM1_0 to SM1_0 {
              x[0] := x[i[0]]
            }
			from SM1_0 to SM1_0 {
              i[0] := i[y[0]]
			}
	    }
	}
	objects p: P()
}
